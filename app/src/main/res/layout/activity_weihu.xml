                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/spinner1"
                    android:overlapAnchor="false"
                    android:spinnerMode="dropdown"
                    android:entries="@array/spingarr1"/>

            </LinearLayout>

            <View
