<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lin_head"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lin_head">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/head"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="测站编码"
                        android:textColor="@color/color_333333"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/et_aso_name"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:hint="请输入测站编码"
                        android:textSize="15sp"
                        android:layout_marginLeft="20dp"
                        android:gravity="left|center"/>

                    <com.water.biaoshu.view.ClickTextView
                        android:id="@+id/tv_search1"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:text="查询"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:background="@drawable/bg_login"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_dddddd"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="测站名称"
                        android:textColor="@color/color_333333"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/et_aso_code"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:hint="请输入测站名称"
                        android:textSize="15sp"
                        android:layout_marginLeft="20dp"
                        android:gravity="left|center"/>

                    <com.water.biaoshu.view.ClickTextView
                        android:id="@+id/tv_search2"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:text="查询"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:background="@drawable/bg_login"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_dddddd"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="监测井基本信息"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="测站编码"
                        android:textSize="17sp"
                        android:textColor="#333333"
                        android:gravity="center"/>


                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="right|center"
                        android:text="1102745271"
                        android:textSize="15sp"
                        android:textColor="@color/color_1fc37f"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_dddddd"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="测站名称"
                        android:textSize="17sp"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:layout_alignBaseline="@+id/editText"
                        android:layout_alignBottom="@+id/editText"
                        android:layout_alignParentStart="true" />


                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="right|center"
                        android:text="1号观测井"
                        android:textSize="15sp"
                        android:textColor="@color/color_1fc37f"
                        android:inputType="phone"
                        android:id="@+id/editText"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_dddddd"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="测站地址"
                        android:textSize="17sp"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:layout_alignParentStart="true" />


                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="right|center"
                        android:text="北京市朝阳区"
                        android:textSize="15sp"
                        android:textColor="@color/color_1fc37f"
                        android:inputType="phone"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_dddddd"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="经度"
                        android:textSize="17sp"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:layout_alignParentStart="true" />


                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="right|center"
                        android:text="125°32'32''"
                        android:textSize="15sp"
                        android:textColor="@color/color_1fc37f"
                        android:inputType="phone"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_dddddd"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="纬度"
                        android:textSize="17sp"
                        android:textColor="#333333"
                        android:gravity="center"
                        android:layout_alignParentStart="true" />


                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:gravity="right|center"
                        android:text="42°18'25''"
                        android:textSize="15sp"
                        android:textColor="@color/color_1fc37f"
                        android:inputType="phone"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_dddddd"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="地面标高"
                        android:textSize="17sp"
                        android:textColor="#333333"
                        android:gravity="center"/>


                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_alignParentRight="true"
                        android:gravity="right|center"
                        android:text="319.544m"
                        android:textSize="15sp"
                        android:textColor="@color/color_1fc37f"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_dddddd"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="孔口标高"
                        android:textSize="17sp"
                        android:textColor="#333333"
                        android:gravity="center"/>


                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:layout_alignParentRight="true"
                        android:gravity="right|center"
                        android:text="319.991m"
                        android:textSize="15sp"
                        android:textColor="@color/color_1fc37f"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_dddddd"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="监测井类型"
                        android:textSize="17sp"
                        android:textColor="#333333"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center">

                        <CheckBox
                            android:id="@+id/checkbox_prepare_1"
                            style="@style/CustomCheckBoxTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:text="新建"
                            android:textColor="@color/color_1fc37f"
                            android:textSize="13sp" />

                        <CheckBox
                            android:id="@+id/checkbox_prepare_2"
                            style="@style/CustomCheckBoxTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:text="改建"
                            android:textColor="@color/color_1fc37f"
                            android:textSize="13sp" />


                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_dddddd"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="地下水类型"
                        android:textSize="17sp"
                        android:textColor="#333333"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:gravity="center">

                        <CheckBox
                            style="@style/CustomCheckBoxTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:text="潜水"
                            android:textColor="@color/color_1fc37f"
                            android:textSize="13sp" />

                        <CheckBox
                            style="@style/CustomCheckBoxTheme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:text="承压水"
                            android:textColor="@color/color_1fc37f"
                            android:textSize="13sp" />


                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_dddddd"/>

                <com.water.biaoshu.view.ClickTextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="20dp"
                    android:text="完整资料查询"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/bg_login"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
